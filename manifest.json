{
  "manifest_version": 2,
  "name": "LearnBoard",
  "short_name": "LearnBoard",
  "version": "0.1",
  "description": "LearnBoard is a chrome extension that helps you to save your learning resources and notes.",
  "permissions": [
    "identity",
    "storage",
    "https://firestore.googleapis.com/"
  ],
  "browser_action": {
    "default_popup": "./public/index.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "oauth2": {
    "client_id": "277297604892-kcvd9oh53i9c8f9prtff53d1j3i4uske.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  },
  "web_accessible_resources": [
    "public/*"
  ],
  "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'"
}