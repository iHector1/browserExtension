{
  "manifest_version": 3,
  "name": "LearnBoard",
  "short_name": "LearnBoard",
  "version": "0.1",
"description": "Extensión de autenticación para una pizarra en línea educativa, con inicio de sesión seguro por correo o Google.",
  "permissions": [
    "identity",
    "storage"
  ],
  "host_permissions": [
    "https://firestore.googleapis.com/"
  ],
  "action": {
    "default_popup": "./public/index.html",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "oauth2": {
    "client_id": "277297604892-kcvd9oh53i9c8f9prtff53d1j3i4uske.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["public/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'"
  }
}
